    <title>{{ localize "title" $lang }}</title>


    <link href="{{ .RootPath }}static/bootstrap/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <link href="{{ .RootPath }}static/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" crossorigin="anonymous">
    <!-- Custom styles for this template -->
    <link href="{{ .RootPath }}static/css/ibm-plex-serif.css" rel="stylesheet">
