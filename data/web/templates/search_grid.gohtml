<!doctype html>
<html lang="de">
{{- $lang := .Lang}}
{{- $mediaserverBase := .MediaserverBase }}

{{template "head.gohtml" . }}
<body class="w-100">

{{ template "nav.gohtml" . }}


<main class="container-fluid">

    <a class="btn btn-dark" data-bs-toggle="offcanvas" href="#offcanvasExample" role="button" aria-controls="offcanvasExample">
        <span class="bi-sliders2"></span>
    </a>

    <div style='background-image: url("../static/img/frame0.png"); background-size: 100% 100%;' class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasExampleLabel">Offcanvas</h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <div>
                Some text as placeholder. In real life you can have the elements you have chosen. Like, text, images, lists, etc.
            </div>
            <div class="dropdown mt-3">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown">
                    Dropdown button
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <li><a class="dropdown-item" href="#">Action</a></li>
                    <li><a class="dropdown-item" href="#">Another action</a></li>
                    <li><a class="dropdown-item" href="#">Something else here</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="album py-5 bg-body-tertiary">
        <div class="container-fluid">
            <div class="row g-12">
                {{- range $edge := .Result.Edges }}
                    <div class="col p-0" style='max-width: 320px; background-image: url("../static/img/frame0.png"); background-size: 100% 100%;'>
                        <div class="m-5" style="transform: rotate(-{{randInt 3 12}}deg)">
                            <div style="align-content: center; text-align: center">
                                {{- if $edge.Base.Poster }}
                                    {{- $size := calcAspectSize $edge.Base.Poster.Width $edge.Base.Poster.Height 200 200 }}
                                    <img class="bd-placeholder-img card-img-top" style="width: {{$size.Width}}px; height: {{$size.Height}}px" src="{{ $mediaserverBase }}/{{ trimPrefix "mediaserver:" $edge.Base.Poster.URI }}/resize/resize/size200x200/formatPNG/autorotate" />
                                {{- else }}
                                <svg class="bd-placeholder-img card-img-top" style="width: 200px; height: 200px;" width="100px" height="200px" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em"></text></svg>
                                {{- end }}
                            </div>
                            <div class="card-body pb-2">
                                <p class="card-title">
                                    {{$edge.Base.Title}}
                                </p>
                                <p class="card-text"></p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-sm btn-outline-secondary">Suche</button>
                                        <button type="button" class="btn btn-sm btn-outline-secondary">Sammlungsseite</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {{- end }}
            </div>
        </div>
    </div>
</main>
<footer class="blog-footer">
    <p>REVOLVING HI:STORIES build by info-age GmbH Basel</p>
    <p>
        <a href="#">Back to top</a>
    </p>
</footer>

<script src="../static/bootstrap/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
</body>
</html>

